{
    "name": "masumi-payment-service",
    "version": "0.1.0",
    "description": "A Payment service for MASUMI AI Nodes",
    "main": "dist/index.js",
    "author": "NMKR",
    "license": "MIT",
    "type": "module",
    "prisma": {
        "seed": "tsx ./prisma/seed.ts"
    },
    "scripts": {
        "prepare": "husky",
        "lint": "eslint --fix \"src/**/*.{ts,js}\" --config eslint.config.mjs",
        "lint-ci": "eslint \"src/**/*.{ts,js}\" --config eslint.config.mjs",
        "format": "prettier --log-level silent --write \"src/**/*.{ts,js}\"",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "prisma:generate": "npx prisma generate",
        "prisma:migrate": "npx prisma migrate deploy",
        "prisma:migrate:dev": "npx prisma migrate dev",
        "prisma:seed": "npx prisma db seed",
        "dev": "tsx watch ./src/index.ts",
        "build": "npx prisma generate && pkgroll",
        "start": "NODE_ENV=production node ./dist/index.js",
        "swagger-json": "export DATABASE_URL='postgresql://test@localhost:5432/masumi_payment_service' && export ENCRYPTION_KEY=set-mock-enc-key-for-generation && tsx ./src/utils/generator/swagger-generator/cli.ts",
        "knip": "knip"
    },
    "dependencies": {
        "@asteasolutions/zod-to-openapi": "^7.3.0",
        "@blockfrost/blockfrost-js": "^6.0.0",
        "@emurgo/cardano-serialization-lib-nodejs": "^14.1.1",
        "@harmoniclabs/cbor": "1.3.0",
        "@jest/globals": "^29.7.0",
        "@jest/types": "^29.6.3",
        "@meshsdk/core": "1.9.0-beta.65",
        "@meshsdk/core-cst": "1.9.0-beta.65",
        "@paralleldrive/cuid2": "^2.2.2",
        "@prisma/client": "^6.6.0",
        "@radix-ui/react-dialog": "^1.1.14",
        "@types/express": "^5.0.0",
        "@types/swagger-ui-express": "^4.1.8",
        "@typescript-eslint/eslint-plugin": "^8.31.1",
        "advanced-retry": "^1.2.1",
        "async-mutex": "^0.5.0",
        "canonical-json": "^0.2.0",
        "cbor": "^10.0.3",
        "dotenv": "^16.4.7",
        "ethereum-cryptography": "^3.1.0",
        "express": "^5.1.0",
        "express-zod-api": "^22.13.2",
        "http-errors": "^2.0.0",
        "json-bigint": "^1.0.0",
        "lz-string": "^1.5.0",
        "swagger-ui-express": "^5.0.1",
        "winston": "^3.17.0",
        "zod": "^3.24.2"
    },
    "devDependencies": {
        "@commitlint/cli": "^19.8.0",
        "@commitlint/config-conventional": "^19.8.0",
        "@eslint/eslintrc": "^3.3.1",
        "@eslint/js": "^9.24.0",
        "@types/jest": "^29.5.14",
        "@types/node": "^22.14.0",
        "@typescript-eslint/eslint-plugin": "^8.30.1",
        "eslint": "^9.24.0",
        "eslint-config-prettier": "^10.1.2",
        "eslint-plugin-prettier": "^5.2.6",
        "globals": "^16.0.0",
        "husky": "^9.1.7",
        "jest": "^29.7.0",
        "knip": "^5.50.1",
        "lint-staged": "^15.5.0",
        "pkgroll": "^2.12.1",
        "prettier": "^3.5.3",
        "prisma": "^6.6.0",
        "ts-jest": "^29.3.1",
        "tsx": "^4.19.3",
        "typescript": "^5.8.3"
    },
    "lint-staged": {
        "*.{js,ts}": [
            "npm run lint",
            "npm run format"
        ]
    }
}
